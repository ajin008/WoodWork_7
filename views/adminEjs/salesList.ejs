      <div class="content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-body">
                  <div class="col-md-12">
                    <form id="dateRangeForm">
                      <label for="startDate">Start Date:</label>
                      <input type="date" id="startDate" name="startDate" />
          
                      <label for="endDate">End Date:</label>
                      <input type="date" id="endDate" name="endDate" />
          
                      <button class="btn btn-light" type="submit">
                        Apply Filter
                      </button>
                      <button
                        class="btn btn-warning"
                        id="clearFilterButton"
                        type="button"
                      >
                        Clear Filter
                      </button>
                    </form>
                    <div class="mt-3">
                      <button
                        class="btn btn-info"
                        onclick="setDateRange('today')"
                      >
                        Today
                      </button>
                      <button
                        class="btn btn-info"
                        onclick="setDateRange('yesterday')"
                      >
                        Yesterday
                      </button>
                      <button
                        class="btn btn-info"
                        onclick="setDateRange('last7days')"
                      >
                        Last 7 Days
                      </button>
                      <button
                        class="btn btn-info"
                        onclick="setDateRange('last30days')"
                      >
                        Last 30 Days
                      </button>
                    </div>
                  </div>
                </div>
                  <div class="m-4" id="downloadSalesReport">
                    <button class="btn btn-success" id="downloadButton">
                      Download Sales Report
                    </button>
                  </div>
                  <div class="d-flex justify-content-between">
                    <h2>Sales Report</h2>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Product Name</th>
                          <th>Price</th>
                          <th>Payment</th>
                          <th>Delivered Date</th>
                          <th>Status</th>
                          <th>Quantity</th>
                          <th>Discount</th>
                          <th>Coupon Deduction</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody id="salesReportTableBody">
                        <% if (orders && orders.length > 0) { %> <%
                        orders.reverse().forEach(order => { %>
                        <tr>
                          <td class="ellipsis"><%= order.productName %></td>
                          <td>Rs <%= order.discountedPrice.toFixed() %></td>
                          <td><%= order.payment %></td>
                          <td>
                            <% if (order.status === 'Pending' ||
                            !order.deliveryDateTime) { %> Pending <% } else { %>
                            <%= new
                            Date(order.deliveryDateTime).toLocaleString('en-US',
                            { timeZone: 'UTC' }) %> <% } %>
                          </td>
                          <td><%= order.status %></td>
                          <td><%= order.quantity %></td>
                          <td><%= order.discountType %></td>
                          <td>Rs <%= order.couponDiscount %></td>
                          <td>
                            <button
                              class="btn btn-warning"
                              onclick="redirectToViewOrders('<%= order.orderId %>', '<%= order.productId %>')"
                            >
                              View details
                            </button>
                          </td>
                        </tr>
                        <% }); %> <% } else { %>
                        <tr>
                          <td colspan="9">No data available</td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
