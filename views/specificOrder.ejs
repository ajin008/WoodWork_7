    <script>
      $(document).ready(function () {
        $(document).on("click", ".cancel-order-btn", function (e) {
          e.preventDefault();

          // Log the click event to verify it's being triggered
          console.log("Cancel button clicked");

          var orderId = $(this).data("orderid");
          var productId = $(this).data("productid");

          // Log the orderId and productId to verify they're being correctly retrieved
          console.log("Order ID:", orderId);
          console.log("Product ID:", productId);

          $.ajax({
            type: "POST",
            url: "/Remove_OrderProduct/" + orderId + "/" + productId,
            success: function (response) {
              console.log("Response from server:", response);
              var userId = response.userId;
              // Redirect to another page after successful cancellation
              window.location.href = `/MyOder_detailsRendering/${userId}`;
            },
            error: function (xhr, status, error) {
              console.error("Error occurred:", error);
              // Optionally, display an error message to the user
              alert(
                "An error occurred while cancelling the order. Please try again."
              );
            },
          });
        });
      });

      document.addEventListener("DOMContentLoaded", function () {
        const continuePaymentButtons = document.querySelectorAll(
          ".continue-payment-btn"
        );

        continuePaymentButtons.forEach((button) => {
          button.addEventListener("click", function () {
            const orderId = this.getAttribute("data-orderid");
            const orderTotal =
              parseFloat(this.getAttribute("data-ordertotal")) * 100;

            fetch("/createRazorpayOrder", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ amount: orderTotal }),
            })
              .then((response) => response.json())
              .then((data) => {
                const options = {
                  key: "rzp_test_PFqhrThyTWqHJx",
                  amount: orderTotal,
                  currency: "INR",
                  name: "woodworks",
                  description: "Payment for your order",
                  order_id: data.orderId,
                  handler: function (response) {
                    console.log("Razorpay payment successful:", response);
                    window.location.href = `/updateOrderPaymentStatus/${orderId}/success`;
                  },
                  prefill: {
                    name: "<%= order.userName %>",
                    email: "<%= order.userEmail %>",
                    contact: "<%= order.userPhone %>",
                  },
                  theme: {
                    color: "#3399cc",
                  },
                  modal: {
                    ondismiss: function () {
                      console.log("Payment popup closed");
                      alert("Payment was not completed. Please try again.");
                    },
                  },
                  notes: {
                    order_id: orderId,
                  },
                };
                const rzp = new Razorpay(options);
                rzp.open();
              })
              .catch((error) => {
                console.error("Error creating Razorpay order:", error);
                alert("Payment failed. Please try again later.");
              });
          });
        });
      });
    </script>
