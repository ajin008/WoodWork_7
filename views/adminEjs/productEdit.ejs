    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const fileInput = document.getElementById('new-images');
        const form = document.getElementById('product-update-form');
        const previewContainer = document.getElementById('new-images-preview');
        const existingImagesContainer = document.getElementById('existing-images');
        const submitButton = document.getElementById('submit-changes');

        function updateImageCount() {
            const totalImages = existingImagesContainer.querySelectorAll('.image-container').length + previewContainer.querySelectorAll('.image-preview').length;
            fileInput.disabled = totalImages >= 5;
            submitButton.disabled = totalImages < 3 || totalImages > 5;
        }

        fileInput.addEventListener('change', function(event) {
            const files = event.target.files;
            Array.from(files).forEach(function(file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.classList.add('image-preview', 'mr-2');
                    const container = document.createElement('div');
                    container.classList.add('mb-2', 'image-container');

                    const removeButton = document.createElement('button');
                    removeButton.type = 'button';
                    removeButton.classList.add('btn', 'btn-sm', 'btn-danger', 'remove-preview-image');
                    removeButton.innerHTML = '<i class="fas fa-trash"></i> Remove';
                    removeButton.addEventListener('click', function() {
                        container.remove();
                        updateImageCount();
                    });

                    container.appendChild(img);
                    container.appendChild(removeButton);
                    previewContainer.appendChild(container);
                    updateImageCount();
                };
                reader.readAsDataURL(file);
            });
        });

        existingImagesContainer.addEventListener('click', function(event) {
            if (event.target.classList.contains('remove-existing-image')) {
                const container = event.target.closest('.image-container');
                container.remove();
                updateImageCount();
            }
        });

        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            const formData = new FormData(form);
            const files = fileInput.files;
            Array.from(files).forEach(function(file) {
                formData.append('images', file);
            });

            const existingImages = [];
            existingImagesContainer.querySelectorAll('.image-preview').forEach(function(img) {
                existingImages.push(img.getAttribute('data-image'));
            });
            formData.append('existingImages', JSON.stringify(existingImages));

            fetch(form.action, {
                method: 'POST',
                body: formData
            })
            .then(function(response) {
                if (response.ok) {
                    window.location.href = "/productManagement";
                } else {
                    throw new Error('Failed to update images');
                }
            })
            .catch(function(error) {
                console.error('Error updating product images:', error);
                alert('Failed to update images. Please try again later.');
            });
        });

        updateImageCount(); // Initial check
    });
  </script>
    
